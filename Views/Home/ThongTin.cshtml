
@{
    ViewBag.Title = "ThongTin";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2 style="text-align: center">THÔNG TIN ĐĂNG KÝ</h2>
<form action="" style="width: 70%; margin: 10px auto;">
    <div class="mb-3 mt-3">
        <label for="ten" class="form-label">Tên:</label>
        <input type="text" class="form-control" id="ten" placeholder="Nhập tên" name="ten">
    </div>
    <div class="mb-3">
        <label for="pwd" class="form-label">Mật khẩu:</label>
        <input type="password" class="form-control" id="pwd" placeholder="Nhập password" name="pswd">
    </div>
    <div>
        <label for="diachi">Địa chỉ:</label>
        <textarea class="form-control" rows="5" id="comment" name="diachi"></textarea>
    </div>
    <div class="form-check mb-3">
        <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="remember"> Ghi nhớ
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Gửi</button>
</form>

